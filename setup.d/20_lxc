#!/bin/sh
#
# Prepare support for LXC, to allow us to put each service in its own
# container.

DEBIAN_FRONTEND=noninteractive apt-get install -y lxc

mkdir /cgroup
echo 'cgroup /cgroup cgroup defaults 0 0' >> /etc/fstab
#mount -a

